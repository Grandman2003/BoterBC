<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/reg_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/sky_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="navigationViewStyle">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ImageProfile" parent="android:Widget.Material.ImageButton">
        <item name="cornerRadius">20dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="AppTheme.Sen_bold_bot_name" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="navigationViewStyle">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>